<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
						http://www.springframework.org/schema/beans/spring-beans.xsd">
						
	<import resource="/applicationContext.xml"/>
						
	<!-- 请求映射 -->
	<bean class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping" >	
	<!--定义映射处理器： 按类别（如：HandlerMapping）寻找所有不需要id -->
		<property name="mappings">
		<!-- 属性mappings是一个映射列表 键值对 key=访问路径 value（控制器id）= id为StartController的bean -->
		<!-- key对应访问路径controller的bean的id -->
			<props>
				<!-- login是前缀，.action匹配indexController里的方法-->
				<prop key="/login/*.action">loginAction</prop>
			</props>
		</property>
	</bean>
	
	<!--配置方法解析器 ，包是multiaction的包加InternalPathMethodNameResolver,方法名字和controller一样-->
	<bean id="defaultResolver" class="org.springframework.web.servlet.mvc.multiaction.InternalPathMethodNameResolver"></bean>


	<!-- 自定义controller -->
	<bean id="loginController" class="springmvcwork.xin.action.AddUserController">
	<property name="serviceUserImpl" ref="serviceUserImpl"></property>
	</bean>




	<bean id="loginAction" class="org.springframework.web.servlet.mvc.multiaction.MultiActionController">
	<property name="methodNameResolver" ref="defaultResolver"></property>
	<property name="delegate" ref="loginController"></property>
	</bean>


	<!-- 3、视图解析器jsp 内部资源视图解析器 /WEB-INF/pages/index.jsp -->
	<!-- prefix,suffix分别对应viewname和welcome -->
	<bean id="jspViewResolver"
		class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="prefix" value="/jsp/" />
		<property name="suffix" value=".jsp" />
	</bean>
		
	
</beans>










